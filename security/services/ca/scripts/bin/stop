cwd="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/../"
cd "${cwd}"

if [ ! -f pidfile ]; then
    echo "Not running"
    exit 0
fi

pid=$(<pidfile)
runuser ezca -c "kill ${pid}"
if [ $? ]; then
    rm pidfile
fi

# Logstash
if [ -f /opt/ezbake/ezbake-logstash-helper/logstash.sh ]; then
	runuser ezca <<-END
	source /opt/ezbake/ezbake-logstash-helper/logstash.sh
	export JAVA_OPTS="-Djava.io.tmpdir=/opt/logstash/tmp"
	stop_logstash common_services ezca /opt/ezca/logstash
	END
fi
